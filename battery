#!/bin/bash

color100p="\033[0;32m"
color60p="\033[0;33m"
color20p="\033[0;31m"
color_shell="\033[0m"
color_charge="\033[0;36m"
NC="\033[0m"

colors=false 
live=false 
minimal=false
small=false

while getopts ":hclms" option; do
      case $option in
    c)
        colors=true
        ;;
    l)
        live=true
        ;;
    m)
        minimal=true
        ;;
    s)
        small=true
        ;;
    h)
        echo "Usage:" 
        echo "  battery [-clsm]"
        echo " "
        echo "OPTIONS"
        echo "  -c   Add colors"
        echo "  -l   Monitor the battery live"
        echo "  -s   Use a small version of the battery instead"
        echo "  -m   Minimal print of the battery status" 
        exit 0
        ;;
    esac
done

reset() {
    tput reset
}

cnorm () {
    tput cnorm
}

if [[ $minimal == false ]] && [[ $small == false ]]; then
    if [[ $live == true ]]; then
        trap reset EXIT
    else
        trap cnorm EXIT
    fi
fi

batpiece () {
i=0

printf "${shell_color}██"

if [[ $blocks == 0 ]]; then
    printf "                                  "

    if [ $1 -eq 0 ]; then
        printf "${shell_color}████"
    else 
        printf "${shell_color}████████"
    fi

else
    while [ $i -le 100 ]; do
        if [ $i -le $blocks ]; then
            printf "${battery_color}█"
        else
            printf " "
        fi

        ((i+=3))
    done

    if [ $1 -eq 0 ]; then
        printf "${shell_color}████"
    else 
        printf "${shell_color}████████"
    fi
fi
}

printbat () {
    tput cup $newl $indent
    printf "${shell_color}████████████████████████████████████████\n"

    tput cup $(($newl+1)) $indent
    batpiece 0

    tput cup $(($newl+2)) $indent
    batpiece 1

    tput cup $(($newl+3)) $indent
    batpiece 1

    if [ $charging -eq 1 ]; then	
        printf "       ${charge_color}████████"
    else
        printf "               "
    fi

    tput cup $(($newl+4)) $indent
    batpiece 1

    if [ $charging -eq 1 ]; then	
        printf "    ${charge_color}████████"
    else
        printf "            "
    fi

    
    tput cup $(($newl+5)) $indent
    batpiece 1


    tput cup $(($newl+6)) $indent
    batpiece 0

    tput cup $(($newl+7)) $indent
    printf "${shell_color}████████████████████████████████████████\n"
}

bat_status () { 
    previous_bat=$bat
    previous_charge=$charging

    bat=$(upower -i /org/freedesktop/UPower/devices/DisplayDevice | grep -E '[[:digit:]]{1,}%' | tr -dc 0-9)
    let blocks=$bat/3*3
    upower -i /org/freedesktop/UPower/devices/DisplayDevice | grep 'discharging' > /dev/null
    charging=$?
 }

core_color () {
    if [[ $colors == true ]]; then 
        battery_color=$color100p

        if [ $bat -lt 60 ]; then
            battery_color=$color60p
        fi

        if [ $bat -lt 20 ]; then
            battery_color=$color20p
        fi
    fi
}

quit? () {
    read -sn 1 -t 0.1 quit 
    if [ "$quit" = "q" ] || [ "$quit" = $'\e' ]; then 
        return 1
    fi

    return 0
}

main_loop () {
    bat_status
    rows=$(tput lines)
    cols=$(tput cols)

    let rows=$rows newl=rows/2-3
    let cols=$cols indent=cols/2-28

    core_color
    printbat

}

if [[ $minimal == true ]]; then
    bat_status
    echo "Battery: $bat%"
    echo "Charging: $charging"
    exit 0
fi

battery_color=$NC
if [[ $colors == true ]]; then
    charge_color=$color_charge
    shell_color=$color_shell
else
    charge_color=$NC
    shell_color=$NC
fi

smallpiece() {
let blocks=$bat/7*7
i=0

printf "${shell_color}██"

if [[ $blocks == 0 ]]; then 
    printf "               ${shell_color}███▊"
else
    while [ $i -le 100 ]; do
        if [ $i -le $blocks ]; then
            printf "${battery_color}█"
        else
            printf " "
        fi

        ((i+=7))
    done

        printf "${shell_color}███▊"
fi

}

if [[ $small == true ]]; then
    bat_status
    core_color

    echo ""
    printf "${shell_color}███████████████████\n"

    smallpiece

    if [ $charging -eq 1 ]; then	
        printf "   ${charge_color}▄▄▄\n"
    else
        printf "               \n"
    fi

    smallpiece

    if [ $charging -eq 1 ]; then	
        printf "  ${charge_color}▀▀▀\n"
    else
        printf "            \n"
    fi

    printf "${shell_color}███████████████████\n"
    exit 0
fi

tput civis
clear
main_loop

if [[ $live == false ]]; then
    tput cup $(tput lines) 0 
else
    while [ 0 ]
    do
        if [[ $(tput lines) != "$rows" ]] || [[ $(tput cols) != "$cols" ]]; then
            quit? || break
            clear
            main_loop
            continue
        fi

        if [[ "$previous_charge" != "$charging" ]] || [[ "$previous_bat" != "$bat" ]]; then
            quit? || break
            main_loop
            continue
        fi

        quit? || break
        bat_status
    done
fi
